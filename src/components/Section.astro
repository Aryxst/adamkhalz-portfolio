---
interface Props {
  id: string;
  title?: string;
  isLast?: boolean;
  isFirst?: boolean;
  replace?: { href: string; text: string };
}
const { title, id, isLast, replace } = Astro.props;
import ArrowDown from "../components/ArrowDown.astro";
import Link from "./Link.astro";
---

<section id={id}>
  {title && <h1>{title}</h1>}
  <slot />
  {
    (!isLast && !replace && <ArrowDown />) ||
      (replace && <Link text={replace.text} href={replace.href} />)
  }
</section>
